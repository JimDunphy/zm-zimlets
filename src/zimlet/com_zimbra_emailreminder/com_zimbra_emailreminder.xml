<zimlet name="com_zimbra_emailreminder" version="0.8" target="main" description="Configure a reminder based on an email message." >
  <include>emailreminder.js</include>
  <includeCSS>emailreminder.css</includeCSS>
  <handlerObject>com_zimbra_emailreminderHdlr</handlerObject>

  <zimletPanelItem label="${msg.EmailReminder_Label}" icon="emailreminder-panelIcon">
    <toolTipText>Drag-and-drop to flag an email with a reminder.</toolTipText>
		<dragSource type="ZmConv" />
		<dragSource type="ZmMailMsg" />
  </zimletPanelItem>

	<userProperties>
		<property type="string" name="emailReminder_allowFlag" value="true"/>
		<property type="string" name="emailReminder_allowDrag" value="true"/>
		<property type="string" name="ereminder_showInCompose" value="false"/>		
		<property type="string" name="turnONEmailReminderZimlet" value="false"/>
	</userProperties>
</zimlet>
