<zimlet name="com_zimbra_ytraffic" version="1.0" description="Yahoo Traffic">
	<include>ytraffic.js</include>
	<includeCSS>ytraffic.css</includeCSS>
	<resource>ytraffic.gif</resource>
	<handlerObject>Com_Zimbra_YTraffic</handlerObject>
	
	<contentObject type="keyword">
		<!-- TODO: Sample matchOn, redefine it later on -->
		<matchOn>
			<regex attrs="ig">text</regex>
		</matchOn>
		
		<onClick>
			<canvas type="window" />
			<actionUrl target="http://www.google.com/search">
				<param name="q">${src.objectContent}</param>
			</actionUrl>
		</onClick>
	</contentObject>
	
	<zimletPanelItem label="Traffic" icon="YTraffic-panelIcon">		
		<toolTipText>Yahoo Traffic</toolTipText>
		<contextMenu>
			<menuItem label="Visit Yahoo Maps with Traffic Informat" id="TRAFFIC.YAHOO.COM" icon="YTraffic-panelIcon">
				<canvas type="window" width="800" height="600" />
				<actionUrl target="http://maps.yahoo.com/beta/index.php#trf=1"/>
			</menuItem>
		</contextMenu>
	</zimletPanelItem>
</zimlet>
