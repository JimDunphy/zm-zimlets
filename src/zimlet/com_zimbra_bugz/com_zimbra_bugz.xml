<zimlet name="com_zimbra_bugz" version="1.2" target="main view-window" description="Bugz - Highlights, previews and links zimbra bugs">
	<resource>bugz.xsl</resource>
	<contentObject>
		<matchOn>
			<regex attrs="ig">(?:(?:\bbug(?:zilla)?:?\s*#?)|(?:show_bug.cgi\?id=))(\d+)\b</regex>
		</matchOn>
		<onClick>
			<canvas type="window" props=""/>
			<actionUrl target="http://bugzilla.zimbra.com/show_bug.cgi">
				<param name="id">${src.$1}</param>
			</actionUrl>
		</onClick>
		<toolTip>
			<actionUrl target="http://bugzilla.zimbra.com/show_bug.cgi" xslt="bugz.xsl">
				<param name="ctype">xml</param>
				<param name="id">${src.$1}</param>
			</actionUrl>
		</toolTip>
    </contentObject>
	<include>bugz.js</include>
	<include>templates/Bugz.template.js</include>	
	<handlerObject>com_zimbra_bugz</handlerObject>
</zimlet>
