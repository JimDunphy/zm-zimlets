<zimlet name="com_zimbra_url" version="1.3" description="URL">
	<include>url.js</include>
	<resource>blank_pixel.gif</resource>
	<handlerObject>Com_Zimbra_Url</handlerObject>

	<serverExtension hasKeyword="url" extensionClass="com.zimbra.cs.zimlet.handler.RegexHandler"/>
	<contentObject type="url">
		<matchOn>
			<regex attrs="ig">((telnet:)|((https?|ftp|gopher|news|file):\/\/)|(www\.[\w\.\_\-]+))[^\s\xA0\(\)\&lt;\>\[\]\{\}\'\"]*</regex>
		</matchOn>
	</contentObject>

    <portlet>
        <canvas title="${msg.title}" width="100%" height="100%" />
        <actionUrl target="${prop.url}" refresh="${prop.refresh}" />
        <portletProperties>
          <property type="string" name="url" label="${msg.url}" value="http://www.zimbra.com/" />
          <property type="number" name="refresh" label="${msg.refresh}" value="3600000" />
        </portletProperties>
    </portlet>
</zimlet>
