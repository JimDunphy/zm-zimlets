<zimlet name="com_zimbra_coloredemails" version="0.1" description="Colors emails in list view based on sender's email or tag name">
  <include>coloredemails.js</include>
  <includeCSS>coloredemails.css</includeCSS>
  <handlerObject>com_zimbra_coloredemails</handlerObject>

  <zimletPanelItem label="Colored Emails" icon="coloredemails-panelIcon">
    <toolTipText>Changes color of the emails in the list based on sender's email or tag name</toolTipText>
		<dragSource type="ZmConv" />
		<dragSource type="ZmMailMsg" />
  </zimletPanelItem>

	<userProperties>
		<property type="string" name="cEmail_manualAddedEmails" value=""/>	
		<property type="string" name="cEmail_autoAddedEmails" value=""/>	
		
		<property type="string" name="cEmail_autoAssociateChkbx" value="true"/>	
		<property type="string" name="cEmail_useAutoAssociatedEmailsChkbx" value="false"/>			
		
		<property type="string" name="turnColoredEmailsZimletON" value="true"/>
	</userProperties>
</zimlet>
