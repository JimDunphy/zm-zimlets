<zimlet name="com_zimbra_sms" version="2.0" description="Send SMS during compose; Drag'n'drop a message, contact, appointment to send them as sms">
	<include>sms.js</include>
	<includeCSS>sms.css</includeCSS>
	<resource>sms-icon.gif</resource>
	<handlerObject>Com_Zimbra_sms</handlerObject>

	<zimletPanelItem label="SMS" icon="SMS-panelIcon">
		<toolTipText>Send SMS during compose; Drag'n'drop a message, contact, appointment to send them as sms</toolTipText>
		<dragSource type="ZmContact" />
		<dragSource type="ZmMailMsg" />
		<dragSource type="ZmConv" />
		<dragSource type="ZmAppt" />
		<contextMenu>
			<menuItem />
			<menuItem label="SMS Zimlet Preferences" id="PREFERENCES" />
			<menuItem />
		</contextMenu>
	</zimletPanelItem>

	<userProperties>
		<!-- upside wireless prefs -->
		<property type="string" name="sms_smsUsername" value=""/>
		<property type="string" name="sms_smsPassword" value=""/>
		<!-- send and sms prefs -->
		<property type="string" name="sms_showSendAndSMSButton" value="true"/>
		<property type="string" name="sms_smsDefaultContent" value="Check your email with subject.. "/>
		<property type="string" name="sms_includeEmailSubject" value="true"/>

		<property type="string" name="turnONSMSZimlet" value="true"/>

	</userProperties>
</zimlet>